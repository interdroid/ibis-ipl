<project name="Ibis IPL apps" default="build" basedir=".">

    <description>
	Build file for the Ibis IPL applications.
    </description>

    <!-- Global properties -->

    <property environment="env"/>
    <property name="ibis"        location="${env.IBIS_HOME}"/>

    <property name="src" location="src" />
    <property name="tmp" location="tmp" />
    <property name="lib" location="lib" />
    <property name="jar" location="${lib}/ipl-apps.jar" />

    <target name="init">
	<!-- Create the time stamp -->
	<tstamp />

	<!-- Create the build directory structure used by compile -->
	<mkdir dir="${tmp}" />
	<mkdir dir="${lib}" />
    </target>

    <target name="set-classpath">
	<path id="default.classpath">
	    <fileset dir="${ibis}/lib">
		<include name="*.jar"/>
	    </fileset>
	</path>
    </target>

    <target name="compile" depends="clean,init,set-classpath"
	description="Compile the application sources">
	<!-- Compile the java code from ${src} into ${tmp} -->
	<javac srcdir="${src}" destdir="${tmp}" debug="on" >
            <classpath refid="default.classpath" />
	    <compilerarg value="-Xlint:unchecked"/>
	</javac>

    </target>

    <target name="ibisc" depends="compile">
	<java   classname="ibis.frontend.Ibisc"
		taskname="Ibisc"
		failonerror="true"
		dir="${tmp}"
		fork="true">
		<arg line="."/>
	    <classpath refid="default.classpath"/>
	</java>
    </target>

    <target name="build" depends="ibisc" description="build the JAR file">

	<!-- Put everything in ${tmp} into the jar file -->
	<jar jarfile="${jar}" basedir="${tmp}" />

	<!-- And delete the build dir -->
	<delete dir="${tmp}" />
    </target>

    <target name="clean" description="clean up">
	<delete dir="${tmp}" />
	<delete dir="${lib}" />
    </target>

</project>
