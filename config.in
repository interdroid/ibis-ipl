#conversion rules

.SUFFIXES:
.SUFFIXES:      .o .class .java .satin .c $(PKG_SUF) .jad _ibis_io_Generator.java _ibis_io_Generator.class


ifeq (0, $(MANTA_CLASS_FILE))

.java.o:
	$(MANTAC_COMMAND) -c $*.java

.java_ibis_io_Generator.java:
	$(JAVAC_COMMAND) $*.java
ifeq (ibis.,$(findstring ibis., $(PACKAGE)))
	cd $(IBIS_ROOT); $(IOC_COMMAND) $(PACKAGEDOT)$*
else
	$(IOC_COMMAND) $(PACKAGEDOT)$*
endif
	$(JAD) -f $*.class
	if [ ! -e $*.java.backup ] ; \
		then if grep -q 'Decompiled by Jad' $*.java; \
			then : ; \
			else cp $*.java $*.java.backup ; \
		fi ; \
	fi
	mv $*.jad $*.java
	$(JAD) -f $*_ibis_io_Generator.class
	mv $*_ibis_io_Generator.jad $*_ibis_io_Generator.java

else

.class.o:
	$(MANTAC_COMMAND) -c $(subst $$,\$$,$*.class)

endif

.class_ibis_io_Generator.class:
ifeq (ibis.,$(findstring ibis., $(PACKAGE)))
	cd $(IBIS_ROOT); $(IOC_COMMAND) $(PACKAGEDOT)$*
else
	$(IOC_COMMAND) $(PACKAGEDOT)$*
endif


rmi_stub_%.java:	%.class
	$(JPATH)/bin/java -classpath $(CLASSPATH) ibis.frontend.rmi.Main -v $*

rmi_skeleton_%.java:	%.class
	$(JPATH)/bin/java -classpath $(CLASSPATH) ibis.frontend.rmi.Main -v $*

.o$(PKG_SUF):
	cp $(subst $$,\$$,$*.o) $(subst $$,\$$,$@)

.java.class:
	$(JAVAC_COMMAND) $*.java

manta:	$(LASM_CACHE)

manta:
ifeq (0, $(MANTA_CLASS_FILE))
	@echo Now make manta:src
	$(MAKE) $(MFLAGS) src
endif
ifneq (, $(SERIALIZABLE))
	@echo Now make manta:serializers
ifeq (0, $(MANTA_CLASS_FILE))
	$(MAKE) $(MFLAGS) USE_DECOMPILE=1 serializers
else
	$(MAKE) $(MFLAGS) USE_DECOMPILE=0 serializers
endif
endif
ifneq (0, $(MANTA_CLASS_FILE))
	@echo Now make manta:class files
	$(MAKE) $(MFLAGS) $(CLASS_FILES)
endif
ifneq (, $(C_SRC))
	@echo Now make manta:.h files for native
	$(MAKE) $(MFLAGS) h_files
endif
ifeq (,$(PACKAGE))
ifneq (, $(OUT))
	@echo Now make manta:out $(OUT)
	$(MAKE) $(MFLAGS) $(OUT)
endif
else
	@echo Now make manta:manta_lib
	$(MAKE) $(MFLAGS) manta_lib
endif

.PHONY:	manta_lib
manta_lib:	$(PKG_O_FILES) $(C_OBJ)
	$(AR) ru $(MANTA_LIB) $(PKG_O_DOLLAR) $(C_OBJ)

$(LASM_CACHE):
	-mkdir -p $@

link:
	$(MANTAC_COMMAND) -link-only \
		-o $(OUT) \
		$(MAIN:%.java=%.o) \
		$(O_FILES) \
		$(MANTA_LIB)

java:
	# $(MAKE) $(MFLAGS) src
ifneq (, $(SERIALIZABLE))
	$(MAKE) $(MFLAGS) USE_DECOMPILE=0 serializers
endif
	$(MAKE) $(MFLAGS) $(CLASS_FILES) $(MAIN_CLASS)

ifneq (, $(SERIALIZABLE))
.PHONY: serializers
ifeq (0, $(USE_DECOMPILE))
serializers:	$(SERIALIZABLE:%.java=%.class) $(SERIALIZABLE:%.java=%_ibis_io_Generator.class) $(REMOTE:%.java=rmi_stub_%.java) $(REMOTE:%.java=rmi_skeleton_%.java)
else
serializers:	$(SERIALIZABLE:%.java=%_ibis_io_Generator.java) $(REMOTE:%.java=rmi_stub_%.java) $(REMOTE:%.java=rmi_skeleton_%.java)
endif
endif

$(OUT): $(MAIN:%.java=%.class) $(O_FILES) $(MANTA_LIB)
	$(MANTAC_COMMAND) -o $@ $(MAIN:%.java=%.class) $(O_FILES) $(MANTA_LIB)

.PHONY: src
src:	$(SRC) $(REMOTE) $(MAIN)

.PHONY:	run
run:
	$(JPATH)/bin/java $(JAVACFLAGS) $(MAIN:%.java=%)

.PHONY:	prun
prun:
	@echo "prun IBP_SEND_SYNC=100 LD_LIBRARY_PATH=$(LD_LIBRARY_PATH):. MANTA_NO_PANDA=1 PAN_COMM_NO_INTR=1 CLASSPATH=$(CLASSPATH) -no-panda $(JPATH)/bin/java 'hosts' $(JAVACFLAGS) $(MAIN:%.java=%) 'args ...'"
